<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="@color/colorPrimaryDark"
    android:backgroundTintMode="add"
    tools:context=".CompletedUserTasksActivity" >

    <TextView
        android:id="@+id/textView3"
        android:layout_width="411dp"
        android:layout_height="47dp"
        android:background="#3d9acc"
        android:fontFamily="sans-serif-black"
        android:gravity="center_horizontal|fill_vertical"
        android:text="IsoHelp"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="#fff"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="411dp"
        android:layout_height="37dp"
        android:layout_marginTop="8dp"
        android:background="#174D9F"
        android:gravity="center_horizontal|fill_vertical"
        android:text="Completed Tasks"
        android:textColor="#FFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <LinearLayout
        android:layout_width="398dp"
        android:layout_height="562dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/volunteer_bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <TextView
            android:layout_width="400dp"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:text="Today"
            android:textColor="#3d9acc"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="5dp"
            tools:layout_editor_absoluteY="112dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:layout_marginBottom="5dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="224dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="#E6EEF3"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|fill_horizontal"
                    android:gravity="fill_vertical"
                    android:paddingLeft="20dp"
                    android:text="Task #0006"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="248dp"
                    android:layout_height="52dp"
                    android:gravity="fill_vertical"
                    android:inputType="textMultiLine"
                    android:paddingLeft="10dp"
                    android:text="User 1 - Collect Medicine from Boots"
                    android:textColor="#000000" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:layout_marginBottom="5dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="224dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="#E6EEF3"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|fill_horizontal"
                    android:gravity="fill_vertical"
                    android:paddingLeft="20dp"
                    android:text="Task #0005"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="249dp"
                    android:layout_height="52dp"
                    android:gravity="fill_vertical"
                    android:inputType="textMultiLine"
                    android:paddingLeft="10dp"
                    android:text="User 4 - Walk Dog"
                    android:textColor="#000000" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp"/>

        <TextView
            android:layout_width="400dp"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:text="Last Week"
            android:textColor="#3d9acc"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="5dp"
            tools:layout_editor_absoluteY="112dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:layout_marginBottom="5dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="224dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="#E6EEF3"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|fill_horizontal"
                    android:gravity="fill_vertical"
                    android:paddingLeft="20dp"
                    android:text="Task #0004"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:gravity="fill_vertical"
                    android:inputType="textMultiLine"
                    android:paddingLeft="10dp"
                    android:text="User 5 - Pick up the medicine from the pharmacy"
                    android:textColor="#000000" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:layout_marginBottom="5dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="224dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="#E6EEF3"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|fill_horizontal"
                    android:gravity="fill_vertical"
                    android:paddingLeft="20dp"
                    android:text="Task #0003"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="248dp"
                    android:layout_height="52dp"
                    android:gravity="fill_vertical"
                    android:inputType="textMultiLine"
                    android:paddingLeft="10dp"
                    android:text="User 3 - Collect Groceries"
                    android:textColor="#000000" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp"/>
        <TextView
            android:layout_width="400dp"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:text="Last 6 Months"
            android:textColor="#3d9acc"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="5dp"
            tools:layout_editor_absoluteY="112dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:layout_marginBottom="5dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="224dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="#E6EEF3"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|fill_horizontal"
                    android:gravity="fill_vertical"
                    android:paddingLeft="20dp"
                    android:text="Task #0002"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:gravity="fill_vertical"
                    android:inputType="textMultiLine"
                    android:paddingLeft="10dp"
                    android:text="Post parcel at Gloucester Road Post Office"
                    android:textColor="#000000" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:layout_marginBottom="5dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="224dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="#E6EEF3"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|fill_horizontal"
                    android:gravity="fill_vertical"
                    android:paddingLeft="20dp"
                    android:text="Task #0001"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="248dp"
                    android:layout_height="52dp"
                    android:gravity="fill_vertical"
                    android:inputType="textMultiLine"
                    android:paddingLeft="10dp"
                    android:text="Walk Dog"
                    android:textColor="#000000" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <ImageButton
        android:id="@+id/volunteer_settings"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:background="#00FFFFFF"
        android:contentDescription="@string/settings"
        android:src="@drawable/settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/volunteer_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/colorPrimary"
        app:itemIconTint="@android:color/white"
        app:itemTextColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/volunteer_navigation_menu" />


</androidx.constraintlayout.widget.ConstraintLayout>