<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="@color/colorPrimaryDark"
    android:backgroundTintMode="add"
    tools:context=".IsolatingMainActivity" >

    <TextView
        android:id="@+id/textView3"
        android:layout_width="411dp"
        android:layout_height="47dp"
        android:background="#3d9acc"
        android:fontFamily="sans-serif-black"
        android:gravity="center_horizontal|fill_vertical"
        android:text="IsoHelp"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="#fff"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/isolating_settings"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:background="#00FFFFFF"
        android:contentDescription="@string/settings"
        android:src="@drawable/settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="411dp"
        android:layout_height="37dp"
        android:layout_marginTop="8dp"
        android:background="#174D9F"
        android:gravity="center_horizontal|fill_vertical"
        android:text="Task Status"
        android:textColor="#FFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <ScrollView
        android:layout_width="412dp"
        android:layout_height="178dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Pending Approval"
                android:textColor="#3d9acc"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingLeft="10dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="Task #1027"
                        android:textStyle="bold"
                        android:gravity="fill_vertical" >
                    </TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:gravity="fill_vertical"
                        android:inputType="textMultiLine"
                        android:paddingLeft="10dp"
                        android:text="Pick up the medicine from the pharmacy"
                        android:textColor="#000000" />
                </LinearLayout>
                <Button
                    android:id="@+id/delete_button1"
                    android:layout_width="136dp"
                    android:layout_height="35dp"
                    android:layout_marginBottom="120dp"
                    android:background="@drawable/rounded_corners"
                    android:backgroundTint="#3d9acc"
                        android:text="DELETE"
                    android:textColor="#fff"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.502"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="MissingConstraints" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="Task #1030"
                        android:textStyle="bold"
                        android:gravity="fill_vertical" >
                    </TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="fill_vertical"
                        android:inputType="textMultiLine"
                        android:paddingLeft="10dp"
                        android:text="Other task - see notes"
                        android:textColor="#000000" />
                </LinearLayout>
                <Button
                    android:id="@+id/delete_button3"
                    android:layout_width="136dp"
                    android:layout_height="35dp"
                    android:layout_marginBottom="120dp"
                    android:background="@drawable/rounded_corners"
                    android:backgroundTint="#3d9acc"
                    android:text="DELETE"
                    android:textColor="#fff"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.502"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="MissingConstraints" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="Task #1028"
                        android:textStyle="bold"
                        android:gravity="fill_vertical" >
                    </TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="fill_vertical"
                        android:inputType="textMultiLine"
                        android:paddingLeft="10dp"
                        android:text="Drop off the parcels at post office"
                        android:textColor="#000000" />

                </LinearLayout>
                <Button
                    android:id="@+id/delete_button2"
                    android:layout_width="136dp"
                    android:layout_height="35dp"
                    android:layout_marginBottom="120dp"
                    android:background="@drawable/rounded_corners"
                    android:backgroundTint="#3d9acc"
                    android:text="DELETE"
                    android:textColor="#fff"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.502"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="MissingConstraints" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="412dp"
        android:layout_height="178dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <Space
                android:id="@+id/space1"
                android:layout_width="match_parent"
                android:layout_height="17dp" />

            <TextView
                android:layout_width="400dp"
                android:layout_height="40dp"
                android:paddingLeft="10dp"
                android:text="Accepted"
                android:textColor="#3d9acc"
                android:textSize="20sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="400dp"
                android:layout_height="60dp"
                app:cardBackgroundColor="#94B3DAEF"
                app:cardCornerRadius="40dp"
                android:textAlignment="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="200dp"
                        android:layout_gravity="center|fill_horizontal"
                        android:layout_height="wrap_content"
                        android:gravity="fill_vertical"
                        android:paddingLeft="20dp"
                        android:text="Task #1028"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="250dp"
                        android:layout_gravity="center|fill_horizontal"
                        android:layout_height="wrap_content"
                        android:gravity="fill_vertical"
                        android:text="Accepted by [Volunteer 1]"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:textColor="#174D9F"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <Space
                android:layout_width="0dp"
                android:layout_height="15dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="400dp"
                android:layout_height="60dp"
                app:cardBackgroundColor="#94B3DAEF"
                app:cardCornerRadius="40dp"
                android:textAlignment="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="200dp"
                        android:layout_gravity="center|fill_horizontal"
                        android:layout_height="wrap_content"
                        android:gravity="fill_vertical"
                        android:paddingLeft="20dp"
                        android:text="Task #1030"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="250dp"
                        android:layout_gravity="center|fill_horizontal"
                        android:layout_height="wrap_content"
                        android:gravity="fill_vertical"
                        android:text="Accepted by [Volunteer 3]"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:textColor="#174D9F"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="412dp"
        android:layout_height="178dp"
        android:layout_marginBottom="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Space
                android:id="@+id/space2"
                android:layout_width="match_parent"
                android:layout_height="17dp" />

            <TextView
                android:layout_width="400dp"
                android:layout_height="34dp"
                android:paddingLeft="10dp"
                android:text="Pending Confirmation"
                android:textColor="#3d9acc"
                android:textSize="20sp"
                android:gravity="fill_vertical"
                android:textStyle="bold" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="Task #0001"
                android:textStyle="bold"
                android:gravity="fill_vertical"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:gravity="fill_vertical"
                android:inputType="textMultiLine"
                android:paddingLeft="10dp"
                android:text="Collect Groceries from LIttle Waitrose &amp; Partners,\nGloucester Road"
                android:textColor="#000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/confirm_button1"
                    android:layout_width="136dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginBottom="120dp"
                    android:background="@drawable/rounded_corners"
                    android:backgroundTint="#3d9acc"
                    android:text="Confirm"
                    android:textColor="#fff"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.502"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="MissingConstraints" />

                <Space
                    android:layout_width="20dp"
                    android:layout_height="0dp" />

                <Button
                    android:id="@+id/reject_button1"
                    android:layout_width="136dp"
                    android:layout_height="35dp"
                    android:layout_marginBottom="120dp"
                    android:background="@drawable/rounded_corners"
                    android:backgroundTint="#3d9acc"
                    android:text="reject"
                    android:textColor="#fff"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.502"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="MissingConstraints" />

            </LinearLayout>

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="Task #0002"
                android:textStyle="bold"
                android:gravity="fill_vertical"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="fill_vertical"
                android:inputType="textMultiLine"
                android:paddingLeft="10dp"
                android:text="Walk the Dog"
                android:textColor="#000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/confirm_button"
                    android:layout_width="136dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginBottom="120dp"
                    android:background="@drawable/rounded_corners"
                    android:backgroundTint="#3d9acc"
                    android:text="Confirm"
                    android:textColor="#fff"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.502"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="MissingConstraints" />

                <Space
                    android:layout_width="20dp"
                    android:layout_height="0dp" />

                <Button
                    android:id="@+id/reject_button"
                    android:layout_width="136dp"
                    android:layout_height="35dp"
                    android:layout_marginBottom="120dp"
                    android:background="@drawable/rounded_corners"
                    android:backgroundTint="#3d9acc"
                    android:text="reject"
                    android:textColor="#fff"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.502"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="MissingConstraints" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/isolating_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/colorPrimary"
        app:itemIconTint="@android:color/white"
        app:itemTextColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/isolating_navigation_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>